<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lesion_types">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/searchFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKINCANCERApp"
            android:textColor="@color/white"
            android:visibility="invisible" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Melanocytic_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Melanocytic Navi" />

                <TextView
                    android:id="@+id/Melanocytic_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/melanocytic_navi" />

                <ImageView
                    android:id="@+id/Melanocytic_i"
                    android:layout_width="254dp"
                    android:layout_height="192dp"
                    android:layout_margin="16dp"
                    tools:srcCompat="@android:drawable/btn_star_big_on" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Melanoma_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Melanocytic Navi" />

                <TextView
                    android:id="@+id/Melanoma_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/melanocytic_navi" />

                <ImageView
                    android:id="@+id/Melanoma_i"
                    android:layout_width="254dp"
                    android:layout_height="192dp"
                    android:layout_margin="16dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Benign_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Melanocytic Navi" />

                <TextView
                    android:id="@+id/Benign_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/melanocytic_navi" />

                <ImageView
                    android:id="@+id/Benign_i"
                    android:layout_width="254dp"
                    android:layout_height="192dp"
                    android:layout_margin="16dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Basal_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Melanocytic Navi" />

                <TextView
                    android:id="@+id/Basal_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/melanocytic_navi" />

                <ImageView
                    android:id="@+id/Basal_i"
                    android:layout_width="254dp"
                    android:layout_height="192dp"
                    android:layout_margin="16dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Actinic_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Melanocytic Navi" />

                <TextView
                    android:id="@+id/Actinic_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/melanocytic_navi" />

                <ImageView
                    android:id="@+id/Actinic_i"
                    android:layout_width="254dp"
                    android:layout_height="192dp"
                    android:layout_margin="16dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Vascular_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Melanocytic Navi" />

                <TextView
                    android:id="@+id/Vascular_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/melanocytic_navi" />

                <ImageView
                    android:id="@+id/Vascular_i"
                    android:layout_width="254dp"
                    android:layout_height="192dp"
                    android:layout_margin="16dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Dermatofibroma_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Melanocytic Navi" />

                <TextView
                    android:id="@+id/Dermatofibroma_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/melanocytic_navi" />

                <ImageView
                    android:id="@+id/Dermatofibroma_i"
                    android:layout_width="254dp"
                    android:layout_height="192dp"
                    android:layout_margin="16dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>